@model List<EntityLayer.Entities.Cart>
@{
    ViewBag.Title = "BuyAll";
    Layout = "~/Views/Shared/DefaultLayout.cshtml";
}

<section>
    <div class="container">
        <div class="row ">

            <div class="col-12">
                <div class="cart">
                    <div class="cart-wrapper">
                        <div class="cart-header">
                            <div class="row">
                                <div class="col-6">Ürün</div>
                                <div class="col-2 text-center ps-5">Fiyat</div>
                                <div class="col-2 text-center ps-5">Adet</div>
                                <div class="col-2 text-center ps-5">Tarih</div>
                            </div>
                        </div>
                        <div class="cart-body">
                            @using (Html.BeginForm("BuyAll2", "Sales", FormMethod.Post))
                            {
                                <!-- Product-->
                                foreach (var item in Model)
                                {
                                    <div class="cart-item">
                                        <div class="row d-flex align-items-center text-center">
                                            <div class="col-6">
                                                <div class="d-flex align-items-center">
                                                    <a href="detail.html"><img class="cart-item-img" src="/Content/img/@item.Product.Image" /></a>
                                                    <div class="cart-title text-start">
                                                        <a class="text-dark" href="detail.html"><strong>@Html.DisplayFor(x => item.Product.Name)</strong></a>
                                                        <br><span class="text-muted text-sm">@item.Product.Size.Name</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-2 text-center">@Html.DisplayFor(x => item.Product.Price)</div>
                                            <div class="col-2">@Html.DisplayFor(x => item.Quantity)</div>
                                            <div class="col-2">@Html.DisplayFor(x=>item.Date)</div>
                                        </div>
                                    </div>
                                }
                                <div class="col-12">
                                    <div class="cart">
                                        <div class="cart-wrapper">
                                            <div class="cart-header">
                                                <div class="row">
                                                    <div class="col-12 text-center">Toplam Tutar:<br /> @ViewBag.tutar</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="form-group col-6 d-flex justify-content-end">
                                        <button class="6 btn btn-success">Onayla</button>
                                    </div>
                                    <div class="form-group col-6">
                                        <a href="/Cart/Index" class="btn btn-dark">İptal</a>
                                    </div>
                                </div>

                            }
                            <!-- Product-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>