    <script>
        const cards = document.querySelectorAll('.side-link')
        cards.forEach(card => {
            card.addEventListener('click', () => {
                removeActiveClass()
                card.classList.add('active')
            })
        })

        function removeActiveClass() {
            cards.forEach(card => {
                card.classList.remove('active')
            })
        }
