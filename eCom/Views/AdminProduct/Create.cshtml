@model EntityLayer.Entities.Product
@{
    ViewBag.Title = "Create";
}
<link href="~/concept-master/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div class="card">
    <h5 class="card-header">Ürün Ekle</h5>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "alert alert-warning alert-dismissible fade show text-center" })
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Ad</label>
                <input id="inputText3" type="text" class="form-control" name="Name" />@Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Açıklama</label>
                <input id="inputText3" type="text" class="form-control" name="Description" />@Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Fiyat</label>
                <input id="inputText3" type="text" class="form-control" name="Price" />@Html.ValidationMessageFor(x => x.Price, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Eski Fiyat</label>
                <input id="inputText3" type="text" class="form-control" name="OldPrice" />@Html.ValidationMessageFor(x => x.OldPrice, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Stok</label>
                <input id="inputText3" type="text" class="form-control" name="Stock" />@Html.ValidationMessageFor(x => x.Stock, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Popüler</label>
                @Html.EditorFor(x => x.Popular)
                @Html.ValidationMessageFor(x => x.Popular, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Onay</label>
                @Html.EditorFor(x => x.isApproved)
                @Html.ValidationMessageFor(x => x.isApproved, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Resim</label>
                <input id="inputText3" type="file" class="form-control" name="File" />@Html.ValidationMessageFor(x => x.Image, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Kategori</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Category, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Marka</label>
                @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>)ViewBag.mrk, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Brand, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Beden</label>
                @Html.DropDownListFor(x => x.SizeId, (List<SelectListItem>)ViewBag.bdn, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Size, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Cinsiyet</label>
                @Html.DropDownListFor(x => x.GenderId, (List<SelectListItem>)ViewBag.cnsyt, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Gender, "", new { @style = "color:red" })
            </div>
            <button class="btn btn-success btn-block d-flex align-items-center justify-content-center" style="height:60px;" type="submit">Ekle</button>
        </form>
    </div>
</div>
