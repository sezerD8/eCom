@model EntityLayer.Entities.Category
@{
    ViewBag.Title = "Create";
}

<link href="~/concept-master/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

<div class="card">
    <h5 class="card-header">Kategori Ekle</h5>
    <div class="card-body">
        <form method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new {@class = "alert alert-warning alert-dismissible fade show text-center"})
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Ad</label>
                <input id="inputText3" type="text" class="form-control" name="Name"/>@Html.ValidationMessageFor(x => x.Name, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label for="inputText3" class="col-form-label">Açıklama</label>
                <input id="inputText3" type="text" class="form-control" name="Description"/>@Html.ValidationMessageFor(x => x.Description, "", new { @style = "color:red" })
            </div>
            <button class="btn btn-success btn-block d-flex align-items-center justify-content-center" style="height:60px;" type="submit">Ekle</button>
        </form>
    </div>
</div>
